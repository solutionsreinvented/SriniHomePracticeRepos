<UserControl
    x:Class="ActivityTracker.UI.UserControls.ProjectsManagementButtonsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="http://schemas.reinvented.com/shared"
    x:Name="Root"
    d:DesignHeight="40"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal">
        <Button
            Width="120"
            Margin="5,0,0,0"
            Command="{Binding CreateProjectCommand}"
            Content="Add New Project"
            Visibility="{Binding UserIsAdmin, Converter={shared:BoolToVisibilityConverter}}" />
        <Button
            Width="120"
            Margin="5,0"
            Command="{Binding CreateActivityCommand}"
            Content="Add New Activity"
            IsEnabled="{Binding ProjectIsSelected}"
            ToolTip="Select a project to add an activity"
            ToolTipService.ShowOnDisabled="True" />
    </StackPanel>

</UserControl>
