<UserControl
    x:Class="ActivityTracker.UI.UserControls.DataManagementButtonsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ActivityTracker.UI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
        <Button
            Width="150"
            Margin="5,0,0,0"
            Command="{Binding LoadProjectsMasterCommand}"
            Content="Load Projects Master" />
        <Button
            Width="150"
            Margin="5,0"
            Command="{Binding SaveProjectsMasterCommand}"
            Content="Save Projects Master" />
    </StackPanel>

</UserControl>
