<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:ActivityTracker.UI.Views"
    xmlns:vm="clr-namespace:ActivityTracker.UI.ViewModels">
    <DataTemplate DataType="{x:Type vm:LoginViewModel}">
        <views:LoginView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ChangePasswordViewModel}">
        <views:ChangePasswordView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:StandardDashboardViewModel}">
        <views:StandardDashboardView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AdminDashboardViewModel}">
        <views:AdminDashboardView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ActivityConflictViewModel}">
        <views:ActivityConflictView />
    </DataTemplate>
</ResourceDictionary>