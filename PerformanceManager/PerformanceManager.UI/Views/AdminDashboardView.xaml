<UserControl
    x:Class="PerformanceManager.UI.Views.AdminDashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:PerformanceManager.Domain.Enums;assembly=PerformanceManager.Domain"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:PerformanceManager.Domain.Models;assembly=PerformanceManager.Domain"
    xmlns:shared="http://schemas.reinvented.com/shared"
    xmlns:uc="clr-namespace:PerformanceManager.UI.UserControls"
    x:Name="Root"
    Width="1100"
    Height="800"
    MinWidth="1400"
    MinHeight="800"
    MaxWidth="1600"
    MaxHeight="900"
    d:DesignHeight="800"
    d:DesignWidth="1400"
    mc:Ignorable="d">
    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="5">

        <Border.Effect>

            <DropShadowEffect
                BlurRadius="15"
                Direction="315"
                ShadowDepth="10"
                Color="Black" />

        </Border.Effect>


        <Grid Margin="15">

            <!--#region Grid Definitions-->

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--#endregion-->

            <GroupBox
                Grid.Row="0"
                Grid.Column="0"
                Header="Pre Orders">

                <uc:ProjectsListControl DataContext="{Binding PreOrders}" />

            </GroupBox>

            <GroupBox
                Grid.Row="1"
                Grid.Column="0"
                Header="Orders">

                <uc:ProjectsListControl DataContext="{Binding Orders}" />

            </GroupBox>

            <GroupBox
                Grid.Row="2"
                Grid.Column="0"
                Header="Developments">

                <uc:ProjectsListControl DataContext="{Binding Developments}" />

            </GroupBox>

            <uc:AddNewProjectControl
                Grid.Row="0"
                Grid.RowSpan="1"
                Grid.Column="1"
                DataContext="{Binding}" />

            <uc:DeleteProjectControl
                Grid.Row="1"
                Grid.Column="1"
                DataContext="{Binding}" />

            <!--<uc:DeleteProjectControl
                Grid.Row="2"
                Grid.Column="1"
                DataContext="{Binding}" />-->

            <GroupBox
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="2"
                DataContext="{Binding ActivityDefinition}"
                Header="Add New Activity to Selected Project"
                IsEnabled="{Binding DataContext.ProjectIsSelected, ElementName=Root}">

                <!--<GroupBox.DataContext>
                    <models:ActivityDefinition />
                </GroupBox.DataContext>-->


                <Grid>

                    <!--#region Grid Definitions-->

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!--#endregion-->

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Activity descipline:" />

                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="1"
                        ItemsSource="{shared:EnumBindingResource enums:Discipline}"
                        SelectedItem="{Binding Discipline}" />

                    <Grid
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,0"
                        DataContext="{Binding Activity}">

                        <!--#region Grid Definitions-->

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <!--#endregion-->

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,5,5"
                            Text="Descipline:" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,5,5"
                            IsEnabled="False"
                            Text="{Binding Discipline}" />

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="5,0,5,5"
                            Text="Category:" />
                        <ComboBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5,0,5,5"
                            DisplayMemberPath="Name"
                            ItemsSource="{Binding Categories}"
                            SelectedItem="{Binding Category}" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,0,5,5"
                            Text="Sub Category:" />
                        <ComboBox
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,0,5,5"
                            ItemsSource="{Binding SubCategories}"
                            SelectedItem="{Binding SubCategory}" />

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,0,5,5"
                            Text="Activity start date:" />
                        <DatePicker
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="0,0,5,5"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            BorderThickness="0.5"
                            SelectedDate="{Binding InitiatedOn}" />

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="5,0,5,5"
                            Text="Allocated man-hours:" />
                        <TextBox
                            Grid.Row="5"
                            Grid.Column="1"
                            Margin="5,0,5,5"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Text="{Binding AllocatedHours}" />

                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="0,0,5,5"
                            Text="Scheduled completion date:" />
                        <TextBox
                            Grid.Row="7"
                            Grid.Column="0"
                            Margin="0,0,5,5"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            IsEnabled="False"
                            Text="{Binding ScheduledCompletion, Mode=OneWay, StringFormat={}{0:dd-MM-yyyy}}" />

                        <Button
                            Grid.Row="9"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Command="{Binding DataContext.AddActivityCommand, ElementName=Root}"
                            Content="Add Activity" />

                    </Grid>

                </Grid>

            </GroupBox>


            <!--<uc:CreateActivityControlPrevious Visibility="Hidden" />-->

        </Grid>

    </Border>

</UserControl>
