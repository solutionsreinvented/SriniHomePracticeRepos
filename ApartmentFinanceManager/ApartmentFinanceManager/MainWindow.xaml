<Window
    x:Class="ApartmentFinanceManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ApartmentFinanceManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ApartmentFinanceManager.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    DataContext="{DynamicResource MainViewModel}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <vm:MainViewModel x:Key="MainViewModel" />
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>


        <ContentControl Grid.Row="0" Content="{Binding CurrentViewModel}" />

        <DataGrid
            Grid.Row="1"
            Margin="20"
            AutoGenerateColumns="True"
            ItemsSource="{Binding C.Flats}" />

    </Grid>
</Window>
