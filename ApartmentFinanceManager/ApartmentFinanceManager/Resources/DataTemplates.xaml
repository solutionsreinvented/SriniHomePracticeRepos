<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ApartmentFinanceManager.Converters"
    xmlns:views="clr-namespace:ApartmentFinanceManager.Views"
    xmlns:vm="clr-namespace:ApartmentFinanceManager.ViewModels">

    <conv:DateToDateOnlyConverter x:Key="DateToDateOnlyConverter" />

    <DataTemplate DataType="{x:Type vm:SummaryViewModel}">
        <views:SummaryView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AddPaymentViewModel}">
        <views:AddPaymentView />
    </DataTemplate>

</ResourceDictionary>