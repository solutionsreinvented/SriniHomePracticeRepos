<UserControl
    x:Class="SlvParkview.FinanceManager.Components.BlockSelectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:SlvParkview.FinanceManager.Enums"
    xmlns:local="clr-namespace:SlvParkview.FinanceManager.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="http://schemas.reinvented.com/shared"
    d:DesignHeight="100"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Width="200"
                VerticalAlignment="Center"
                Text="Choose block:" />
            <ComboBox
                Width="50"
                ItemsSource="{shared:EnumBindingResource enums:Tower}"
                SelectedItem="{Binding SelectedTower}" />
        </StackPanel>
    </Grid>
</UserControl>
