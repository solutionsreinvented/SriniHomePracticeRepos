<UserControl
    x:Class="SlvParkview.FinanceManager.Views.EditFlatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:SlvParkview.FinanceManager.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="http://schemas.reinvented.com/shared"
    xmlns:theme="http://schemas.reinvented.com/ui/themes"
    xmlns:views="clr-namespace:SlvParkview.FinanceManager.Views"
    MinWidth="650"
    MinHeight="700"
    MaxWidth="900"
    MaxHeight="700"
    d:DesignHeight="700"
    d:DesignWidth="850"
    Foreground="{theme:ThemeResource ResourceKey=StaticForegroundBrush}"
    mc:Ignorable="d">

    <Grid Margin="10">

        <!--#region Grid Definitions-->

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--#endregion-->

        <!--#region Effects-->

        <Border
            Grid.RowSpan="4"
            Background="{theme:ThemeResource ResourceKey=StaticBackgroundBrush}"
            BorderThickness="2"
            CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="45"
                    Opacity="0.6"
                    ShadowDepth="2"
                    Color="Gray" />
            </Border.Effect>
        </Border>

        <!--#endregion-->

        <!--#region Title-->

        <TextBlock
            Grid.Row="0"
            Margin="0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="14"
            FontWeight="DemiBold"
            Text="Edit Flat" />

        <!--#endregion-->

        <!--#region Flat Information-->

        <views:FlatDetailView Grid.Row="1" DataContext="{Binding FlatToBeProcessed}" />

        <!--#endregion-->

        <!--#region Add Payment Detail-->

        <Grid Grid.Row="2" Margin="20,0,20,10">

            <!--#region Grid Definitions-->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <!--#endregion-->

            <!--#region Payments History Group-->

            <GroupBox
                Grid.Column="0"
                BorderThickness="0.2"
                DataContext="{Binding FlatToBeProcessed.Payments}"
                Header="Payments History">

                <Grid>

                    <!--#region Grid Definitions-->

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#endregion-->

                    <!--#region Payments Data-->

                    <DataGrid
                        Grid.Row="0"
                        Margin="5"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="True"
                        CanUserResizeRows="False"
                        HorizontalScrollBarVisibility="Disabled"
                        ItemsSource="{Binding}"
                        SelectedItem="{Binding SelectedPayment}"
                        SelectionUnit="FullRow"
                        VerticalScrollBarVisibility="Auto">

                        <DataGrid.Columns>

                            <DataGridTemplateColumn Width="*" Header="Date">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="5,0"
                                            HorizontalAlignment="Center"
                                            Text="{Binding ReceivedOn, StringFormat={}{0:dd-MM-yyyy}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="0.7*" Header="Amount">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="5,0"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Amount, StringFormat={}{0:N2}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="1.6*" Header="Category">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="5,0"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Category}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="0.7*" Header="Mode">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="5,0"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Mode}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>

                    </DataGrid>

                    <!--#endregion-->

                    <!--#region Payment Manipulation Buttons-->

                    <UniformGrid Grid.Row="1" Columns="3">

                        <Button Content="Delete Payment" />
                        <Button Content="Edit Payment" />
                        <Button Content="Save Payment" />

                    </UniformGrid>

                    <!--#endregion-->

                </Grid>

            </GroupBox>

            <!--#endregion-->

            <!--#region Expenses History Group-->

            <GroupBox
                Grid.Column="1"
                Margin="5,0,0,0"
                BorderThickness="0.2"
                DataContext="{Binding FlatToBeProcessed.Expenses}"
                Header="Expenses History">

                <Grid>

                    <!--#region Grid Definitions-->

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#endregion-->

                    <!--#region Expenses Data-->

                    <DataGrid
                        Grid.Row="0"
                        Margin="5"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="True"
                        CanUserResizeRows="False"
                        HorizontalScrollBarVisibility="Disabled"
                        ItemsSource="{Binding}"
                        SelectedItem="{Binding SelectedExpense}"
                        SelectionUnit="FullRow"
                        VerticalScrollBarVisibility="Auto">

                        <DataGrid.Columns>

                            <DataGridTemplateColumn Width="*" Header="Date">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="5,0"
                                            HorizontalAlignment="Center"
                                            Text="{Binding ReceivedOn, StringFormat={}{0:dd-MM-yyyy}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="0.7*" Header="Amount">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="5,0"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Amount, StringFormat={}{0:N2}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="1.6*" Header="Category">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="5,0"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Category}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>

                    </DataGrid>

                    <!--#endregion-->

                    <!--#region Expenses Manipulation Buttons-->

                    <UniformGrid Grid.Row="1" Columns="3">

                        <Button Content="Delete Expense" />
                        <Button Content="Edit Expense" />
                        <Button Content="Save Expense" />

                    </UniformGrid>

                    <!--#endregion-->

                </Grid>

            </GroupBox>

            <!--#endregion-->

        </Grid>

        <!--#endregion-->

        <!--#region Buttons Group-->

        <Grid
            Grid.Row="3"
            Height="26"
            Margin="20,0,20,10"
            VerticalAlignment="Center">

            <!--#region Grid Definitions-->

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--#endregion-->

            <!--#region Buttons-->

            <Button
                Grid.Column="0"
                Margin="0,0,5,0"
                Command="{Binding GenerateReportsCommand}"
                Content="Generate Reports" />

            <Button
                Grid.Column="1"
                Margin="5,0"
                Command="{Binding SaveFlatCommand}"
                Content="Save Flat Details" />

            <Button
                Grid.Column="2"
                Margin="5,0"
                Command="{Binding AddPaymentCommand}"
                Content="Add Payment" />

            <Button
                Grid.Column="3"
                Margin="5,0"
                Command="{Binding AddExpenseCommand}"
                Content="Add Expense" />

            <Button
                Grid.Column="4"
                Margin="5,0"
                Command="{Binding AddCommonExpenseCommand}"
                Content="Add Common Expense" />

            <Button
                Grid.Column="5"
                Margin="5,0,0,0"
                Command="{Binding GoToSummaryCommand}"
                Content="Switch to Summary" />

            <!--#endregion-->

        </Grid>

        <!--#endregion-->

    </Grid>

</UserControl>
