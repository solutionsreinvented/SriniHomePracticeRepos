<UserControl
    x:Class="SlvParkview.FinanceManager.Views.FlatDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:SlvParkview.FinanceManager.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="http://schemas.reinvented.com/shared"
    MinWidth="650"
    MinHeight="240"
    MaxHeight="250"
    d:DesignHeight="220"
    d:DesignWidth="650"
    mc:Ignorable="d">

    <!--#region Flat Details Host-->

    <GroupBox
        Margin="20,0,20,10"
        BorderThickness="0.2"
        Header="Details of the flat">

        <Grid Margin="10">

            <!--#region Grid Resources-->

            <Grid.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Margin" Value="0,5" />
                </Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="Padding" Value="5,2" />
                    <Setter Property="Margin" Value="0,2,5,2" />
                    <Setter Property="Height" Value="26" />
                    <Setter Property="IsEnabled" Value="False" />
                </Style>

                <Style BasedOn="{StaticResource ComboBoxStyle}" TargetType="{x:Type ComboBox}">
                    <Setter Property="Margin" Value="0,2,5,2" />
                    <Setter Property="Height" Value="26" />
                </Style>

            </Grid.Resources>

            <!--#endregion-->

            <!--#region Grid Definitions-->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--#endregion-->

            <!--#region Column 1 Data-->

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,5"
                Text="Flat number: " />

            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding Description, Mode=OneWay}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Text="Name of the owner: " />

            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                IsEnabled="{Binding CanEditFlatDetails}"
                Text="{Binding OwnedBy}" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Text="Name of the co-owner: " />

            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                IsEnabled="{Binding CanEditFlatDetails}"
                Text="{Binding CoOwnedBy}" />

            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Text="Name of the tenant: " />

            <TextBox
                Grid.Row="4"
                Grid.Column="1"
                IsEnabled="{Binding CanChangeTenantName}"
                Text="{Binding TenantName}" />

            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Text="Flat is occupied by: " />

            <ComboBox
                Grid.Row="5"
                Grid.Column="1"
                Height="26"
                IsEnabled="{Binding CanEditFlatDetails}"
                ItemsSource="{shared:EnumBindingResource enums:ResidentType}"
                SelectedItem="{Binding ResidentType}">
                <ComboBox.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Margin" Value="0" />
                    </Style>
                </ComboBox.Resources>
            </ComboBox>

            <!--#endregion-->

            <!--#region Column 2 Data-->

            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                Text="Retrieve results till: " />

            <DatePicker
                Grid.Row="1"
                Grid.Column="3"
                Margin="0,2,5,2"
                VerticalContentAlignment="Center"
                SelectedDate="{Binding DateSpecified}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="2"
                Text="Account incorporated on: " />

            <TextBox
                Grid.Row="2"
                Grid.Column="3"
                Text="{Binding AccountOpenedOn, Mode=OneWay, StringFormat={}{0:dd-MMM-yyyy}}" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="2"
                Text="Opening balance: " />

            <TextBox
                Grid.Row="3"
                Grid.Column="3"
                Text="{Binding OpeningBalance, StringFormat={}{0:N2}}" />

            <TextBlock
                Grid.Row="4"
                Grid.Column="2"
                Text="Oustanding on specified date: " />

            <TextBox
                Grid.Row="4"
                Grid.Column="3"
                Text="{Binding OutstandingOnSpecifiedDate, Mode=OneWay, StringFormat={}{0:N2}}" />

            <TextBlock
                Grid.Row="5"
                Grid.Column="2"
                Text="Current outstanding: " />

            <TextBox
                Grid.Row="5"
                Grid.Column="3"
                Text="{Binding CurrentOutstanding, Mode=OneWay, StringFormat={}{0:N2}}" />

            <!--#endregion-->

            <!--#region Allow Flat Modifications-->

            <CheckBox
                Grid.Row="6"
                Grid.ColumnSpan="4"
                Margin="0,10,0,0"
                VerticalContentAlignment="Center"
                Content="Modify flat details"
                IsChecked="{Binding CanEditFlatDetails}" />

            <!--#endregion-->

        </Grid>

    </GroupBox>

    <!--#endregion-->

</UserControl>
