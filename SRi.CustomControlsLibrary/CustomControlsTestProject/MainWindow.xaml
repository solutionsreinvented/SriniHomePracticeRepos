<Window
    x:Class="CustomControlsTestProject.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:SRi.CustomControlsLibrary;assembly=SRi.CustomControlsLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CustomControlsTestProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:CustomControlsTestProject.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    DataContext="{DynamicResource MainViewModel}"
    mc:Ignorable="d">
    <Window.Resources>
        <vm:MainViewModel x:Key="MainViewModel" />
    </Window.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <cc:PasswordBoxEx
            Grid.Row="0"
            Width="200"
            Height="28"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            Password="{Binding Password}" />

        <TextBlock Grid.Row="1" Text="{Binding Password}" />
    </Grid>
</Window>
