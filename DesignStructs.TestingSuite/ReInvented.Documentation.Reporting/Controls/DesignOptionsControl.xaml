<UserControl
    x:Class="ReInvented.Documentation.Reporting.Controls.DesignOptionsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReInvented.Documentation.Reporting.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="500"
    mc:Ignorable="d">
    <GroupBox Padding="5" Header="Design">
        <StackPanel>
            <CheckBox
                Margin="0,5"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Perform iterative auto design of members"
                IsChecked="{Binding PerformAutoDesign}" />
            <CheckBox
                Margin="0,5"
                VerticalAlignment="Center"
                VerticalContentAlignment="Top"
                IsChecked="{Binding CheckNonPreferredSectionsAlso}"
                IsEnabled="{Binding PerformAutoDesign}">
                <CheckBox.Content>
                    <TextBlock Text="Use sections other than the preferred if none of the preferred sections satisfy the design requirements" TextWrapping="Wrap" />
                </CheckBox.Content>
            </CheckBox>
        </StackPanel>
    </GroupBox>
</UserControl>
