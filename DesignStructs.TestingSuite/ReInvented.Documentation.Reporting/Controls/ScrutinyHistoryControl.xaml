<UserControl
    x:Class="ReInvented.Documentation.Reporting.Controls.ScrutinyHistoryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ReInvented.Documentation.Reporting.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="250"
    d:DesignWidth="500"
    mc:Ignorable="d">
    <GroupBox Padding="5" Header="Scrutiny History">
        <StackPanel>
            <controls:ScrutinizerControl Header="Originator" Scrutinizer="{Binding Originator, Mode=TwoWay}" />
            <controls:ScrutinizerControl Header="Reviewer" Scrutinizer="{Binding Reviewer, Mode=TwoWay}" />
            <controls:ScrutinizerControl Header="Approver" Scrutinizer="{Binding Approver, Mode=TwoWay}" />
        </StackPanel>
    </GroupBox>
</UserControl>
