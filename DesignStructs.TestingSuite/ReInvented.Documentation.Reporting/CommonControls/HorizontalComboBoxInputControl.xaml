<UserControl
    x:Class="ReInvented.Documentation.Reporting.Controls.HorizontalComboBoxInputControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReInvented.Documentation.Reporting.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    d:DesignHeight="50"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid DataContext="{Binding ElementName=Root}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding LabelColumnWidth}" />
            <ColumnDefinition Width="{Binding ComboBoxColumnWidth}" />
        </Grid.ColumnDefinitions>
        <TextBlock VerticalAlignment="Center" Text="{Binding Label}" />
        <ComboBox
            Grid.Column="1"
            Height="26"
            Margin="5,0"
            Padding="5,2"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            ItemsSource="{Binding ItemsSource}"
            SelectedItem="{Binding SelectedItem}" />
    </Grid>
</UserControl>
