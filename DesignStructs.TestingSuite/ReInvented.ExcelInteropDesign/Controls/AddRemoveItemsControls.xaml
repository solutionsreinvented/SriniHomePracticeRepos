<UserControl
    x:Class="ReInvented.ExcelInteropDesign.Controls.AddRemoveItemsControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReInvented.ExcelInteropDesign.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="250"
    d:DesignWidth="100"
    mc:Ignorable="d">

    <StackPanel
        Width="40"
        Margin="10,0"
        VerticalAlignment="Center">
        <Button
            Margin="0,3"
            Command="{Binding AddSelectedClassificationCommand}"
            Content="&gt;"
            IsEnabled="{Binding CanAddSelection}" />
        <Button
            Margin="0,3"
            Command="{Binding AddAllClassificationsCommand}"
            Content="&gt;&gt;"
            IsEnabled="{Binding CanAddSelection}" />


        <Button
            Margin="0,20,0,3"
            Command="{Binding RemoveSelectedClassificationCommand}"
            Content="&lt;"
            IsEnabled="{Binding CanRemoveSelection}" />
        <Button
            Margin="0,3"
            Command="{Binding RemoveAllClassificationsCommand}"
            Content="&lt;&lt;"
            IsEnabled="{Binding CanRemoveAll}" />

    </StackPanel>

</UserControl>
