<Window
    x:Class="ReInvented.Domain.Reporting.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reportingControls="clr-namespace:ReInvented.Domain.Reporting.Controls"
    Title="HomeView"
    Width="1200"
    Height="750"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Width="200"
            Height="24"
            Margin="0,5"
            HorizontalAlignment="Center"
            Command="{Binding MoveToNextReportCommand}"
            Content="Next Report" />
        <reportingControls:ReportControl Grid.Row="1" DataContext="{Binding ReportViewModel}" />
    </Grid>
</Window>
