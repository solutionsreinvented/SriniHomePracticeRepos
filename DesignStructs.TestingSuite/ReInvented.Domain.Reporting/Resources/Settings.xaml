<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:projectSetupControls="clr-namespace:ReInvented.Domain.ProjectSetup.Controls;assembly=ReInvented.Domain.ProjectSetup"
    xmlns:shared="http://schemas.reinvented.com/shared">

    <Style TargetType="{x:Type projectSetupControls:TextBoxInputControl}">
        <Setter Property="Height" Value="24" />
    </Style>
    <Style TargetType="{x:Type projectSetupControls:ComboBoxInputControl}">
        <Setter Property="Height" Value="24" />
    </Style>
    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Height" Value="24" />
        <Setter Property="Padding" Value="5,2" />
        <Setter Property="shared:TextBoxProperties.SelectAll" Value="True" />
    </Style>

</ResourceDictionary>