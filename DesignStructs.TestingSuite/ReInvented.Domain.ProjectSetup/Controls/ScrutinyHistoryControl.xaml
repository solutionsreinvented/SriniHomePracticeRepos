<UserControl
    x:Class="ReInvented.Domain.ProjectSetup.Controls.ScrutinyHistoryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ReInvented.Domain.ProjectSetup.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    d:DesignHeight="250"
    d:DesignWidth="500"
    mc:Ignorable="d">
    <GroupBox
        Padding="5"
        DataContext="{Binding ProjectInfo}"
        Header="Scrutiny History">
        <StackPanel>
            <controls:ScrutinizerControl Header="Originator" Scrutinizer="{Binding Originator}" />
            <controls:ScrutinizerControl Header="Reviewer" Scrutinizer="{Binding Reviewer}" />
            <controls:ScrutinizerControl Header="Approver" Scrutinizer="{Binding Approver}" />
        </StackPanel>
    </GroupBox>
</UserControl>
