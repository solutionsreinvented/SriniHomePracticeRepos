<UserControl
    x:Class="ReInvented.Animations.Controls.RecentItemsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ap="clr-namespace:ReInvented.Animations.AttachedProperties"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReInvented.Animations.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="500"
    ap:AnimationProperties.LoadAnimationKind="StretchFromLeft"
    ap:AnimationProperties.UnloadAnimationKind="SqueezeToRight"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock
            Margin="25"
            FontSize="16"
            Text="{Binding Title}" />
    </Grid>
</UserControl>
