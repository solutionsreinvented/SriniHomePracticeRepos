<Window
    x:Class="ReInvented.Domain.Drawing.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReInvented.Domain.Drawing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Canvas
            Name="plotCanvas"
            Margin="25"
            Background="White">
            <Border
                Width="{Binding ActualWidth, ElementName=plotCanvas}"
                Height="{Binding ActualHeight, ElementName=plotCanvas}"
                BorderBrush="Gray"
                BorderThickness="0.6"
                CornerRadius="5" />
        </Canvas>
    </Grid>
</Window>
